<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="needServeDetail"
            type="bid.xiaocha.xxt.model.NeedServeEntity"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="bid.xiaocha.xxt.ui.MyNeedServeDetailActivity"
        tools:showIn="@layout/activity_my_need_serve_detail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/window_background">
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSpliter"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ly_address">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/myLayoutPadding"
                    android:background="@color/item_background">
                    <TextView
                        android:text='@{@string/place+needServeDetail.place}'
                        android:id="@+id/tv_need_serve_place"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5sp">
                        <TextView
                            android:text='@{@string/username+needServeDetail.userName}'
                            android:id="@+id/tv_need_serve_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:text='@{@string/phone+needServeDetail.phone}'
                            android:id="@+id/tv_need_serve_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情"
                android:paddingLeft="10dp"
                android:textColor="@color/Black"
                android:layout_marginTop="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSpliter"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/item_background">
                <TextView
                    android:padding="@dimen/myLayoutPadding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Gray"
                    android:id="@+id/tv_need_serve_detail_state"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSpliter"
                    />
                <TextView
                    android:padding="@dimen/myLayoutPadding"
                    android:text='@{@string/title+needServeDetail.title}'
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Gray"
                    android:id="@+id/tv_need_serve_detail_title"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSpliter"
                    />
                <EditText
                    android:text="@{needServeDetail.content}"
                    android:padding="@dimen/myLayoutPadding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:id="@+id/edt_need_serve_detail_content"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSpliter"
                    />

                <EditText
                    android:text='@{""+needServeDetail.price}'
                    android:padding="@dimen/myLayoutPadding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:id="@+id/edt_need_serve_detail_price"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*下架才能修改"
            android:paddingLeft="10dp"
            android:layout_gravity="right"
            android:textColor="@color/Red"
            android:layout_marginTop="10dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btn_change"
                android:text="修改"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btn_change_confirm"
                android:text="确定修改"/>
        </FrameLayout>

    </LinearLayout>

</layout>