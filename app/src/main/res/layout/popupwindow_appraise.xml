<?xml version="1.0" encoding="utf-8"?>
<layout>
   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:star="http://schemas.android.com/apk/res-auto"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       >
      <LinearLayout
          android:paddingLeft="10dp"
          android:paddingRight="10dp"
          android:background="@drawable/popup_background"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
         <TextView
             android:layout_width="300dp"
             android:layout_height="wrap_content"
             android:text="评价"
             android:textSize="25sp"
             android:layout_marginTop="14dp"
             android:gravity="center"
             />
         <bid.xiaocha.xxt.ui.views.StarAppraiseView
             android:layout_marginTop="10dp"
             android:id="@+id/star_appraise"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             star:stat_on="@drawable/frodo_rate_star_big_on_holo_light"
             star:stat_off="@drawable/frodo_rate_star_big_off_holo_light"
             star:stat_half="@drawable/frodo_rate_star_big_half_holo_light"
             star:star_padding="10dp"
             star:ratable="true">
         </bid.xiaocha.xxt.ui.views.StarAppraiseView>
         <TextView
             android:id="@+id/tv_appraise_point"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="请评分"
             android:gravity="right"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:text="详细评价"
             android:textSize="15sp"/>
         <EditText
             android:id="@+id/et_appraise"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="13dp"
             android:hint="请输入"
             android:textSize="13sp"/>

         <Button
             android:id="@+id/btn_confirm_appraise"
             android:layout_width="80dp"
             android:layout_height="35dp"
             android:layout_gravity="center"
             android:text="确认评价"/>
      </LinearLayout>
   </LinearLayout>
</layout>
