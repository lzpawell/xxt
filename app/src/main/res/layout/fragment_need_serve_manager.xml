<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="bid.xiaocha.xxt.ui.fragment.NeedServeManagerFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/ly_refresh_service_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:id="@+id/lv_service_manager_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
            <include layout="@layout/list_footer" android:id="@+id/ly_footer" android:visibility="gone" />
        </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
</layout>